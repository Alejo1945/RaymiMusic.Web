@page
@model RaymiMusic.MVC.Pages.Cuenta.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-dark text-light">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión
                </h2>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">
                            <i class="bi bi-envelope-fill me-1"></i>Email
                        </label>
                        <input asp-for="Correo" type="email" class="form-control" required />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Contraseña
                        </label>
                        <input asp-for="Contrasena" type="password" class="form-control" required />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                        </button>
                    </div>
                </form>

                @if (!string.IsNullOrEmpty(Model.ErrorMensaje))
                {
                    <div class="alert alert-danger mt-3">@Model.ErrorMensaje</div>
                }

                <div class="text-center mt-3">
                    <small>¿No tienes una cuenta? <a asp-page="/Cuenta/Register" class="text-info">Regístrate</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}