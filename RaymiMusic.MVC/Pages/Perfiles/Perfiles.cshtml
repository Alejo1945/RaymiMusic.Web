@page
@model RaymiMusic.MVC.Pages.Perfiles.PerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-body text-center">

                    @* Foto de perfil *@
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.Usuario?.Perfil?.UrlFoto))
                        {
                            <img src="@Model.Usuario.Perfil.UrlFoto" class="rounded-circle border border-secondary shadow-sm" width="150" height="150" style="object-fit: cover;" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/150?text=Sin+Foto" class="rounded-circle border border-secondary shadow-sm" width="150" height="150" />
                        }
                    </div>

                    @* Nombre completo y correo *@
                    <h3 class="text-light mb-0">@Model.Usuario?.Perfil?.NombreCompleto</h3>
                    <p class="text-muted">@Model.Usuario?.Correo</p>

                    @* Rol y plan *@
                    <div class="mb-2">
                        <span class="badge bg-secondary me-2">@Model.Usuario?.Rol</span>
                        <span class="badge bg-info">@Model.Usuario?.PlanSuscripcion?.Nombre</span>
                    </div>

                    @* Nombre artístico y biografía si es artista *@
                    @if (Model.Artista != null)
                    {
                        <hr class="bg-secondary" />
                        <h5 class="text-start">Nombre artístico:</h5>
                        <p class="text-start">@Model.Artista.NombreArtistico</p>

                        <h5 class="text-start">Biografía:</h5>
                        <p class="text-start">@Model.Artista.Biografia</p>
                    }

                    @* Botón para editar *@
                    <div class="mt-4">
                        <a asp-page="/Perfiles/Edit" class="btn btn-outline-light">
                            <i class="bi bi-pencil-fill"></i> Editar Perfil
                        </a>
                    </div>

                    @* Mensaje de error si aplica *@
                    @if (!string.IsNullOrEmpty(Model.Error))
                    {
                        <div class="alert alert-danger mt-3">@Model.Error</div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>